<%- include("partials/header"); -%>

<form action="/compose" method="post" class="form-signin">
  <h1 class="h3 mb-3 font-weight-normal">Compose</h1>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="postTitle" id="title" class="form-control top" placeholder="Title" required autofocus/>
  </div>

  <div class="form-group">
    <label for="article">Post</label>
    <textarea type="text" name="postContent" id="article" class="form-control middle" rows="6" placeholder="Article" required></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer"); -%>
